    "eslint": "8.17.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "jest": "28.0.3",
    "source-map-support": "0.5.21",
    "supertest": "6.2.3",
    "ts-jest": "28.0.1",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.1",
    "tsc-watch": "5.0.3",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
